    #include <stdio.h>
    #include <math.h>
     
    int main()
    {
        int T;
        float N;
        int result;
        
        scanf("%d",&T);
        
        while(T--)
        {
            scanf("%f",&N);
            
            result = (sqrt(8*N+1)-1)/2;     //solving inequality n(n+1)/2 <= N
            
            printf("%d\n",result);
        }
        
        return 0;
    } 
